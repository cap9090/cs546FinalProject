<div id='products' class='card card-block'>
    <h2>Our Products {{#if goal }} For Your Goal: {{goal}} {{/if}}
    </h2>
    {{#if products}}
    <div id='product-list' class="productList">
        <ul>
            {{#each products}}
            <p><a id="{{this._id}}" href="#detail{{this._id}}" class="toggleDetails">{{this.name}}</a></p>
            {{/each}}
        </ul>
    </div>
    {{else}}
    <h3>You're all good with this goal!</h3>
    {{/if}} {{#if goal}}
    <div id='goal-message' class='goals'>{{message}}</div>
    {{/if}}
</div>