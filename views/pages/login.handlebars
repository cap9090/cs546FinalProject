<section class="flip">
<div class="login-signup">
    <div class="face login">
        <form id="login-form" class="login-form" action="/login" method="post">
            <h2 class = "form-signin-heading"> Login</h2>
            <label for="loginEmail" class="sr-only"> Email Address</label>
            <input type="email" name="username" id="loginEmail" class="form-control" placeholder="email address" required autofocus>
            <label for="loginPassword" class="sr-only"> Password</label>
            <input type="password" name="password" id="loginPassword" class="form-control" placeholder="password" required>
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me" id="login-remember-checkbox">Remember me
                </label>
            </div>
            <input class='btn btn-primary' type="submit" id="login-button" value="Sign In"/>
            <div class = "new-signup">
                <a id="new-signup-link" href="">New User?   Up!</a>
            </div>
        </form>
    </div>
    <div class="face signup">
        <form id="signup-form" class="login-form">
            <h2 class = "form-signup-heading"> Sign Up</h2>

            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" class="form-control" placeholder="username" required autofocus>

            <label for="password" class="sr-only"> Password</label>
            <input type="password" id="password" class="form-control" placeholder="password" required>

            <label for="firstName" class="sr-only">firstName</label>
            <input type="text" id="firstName" class="form-control" placeholder="first name" required autofocus>

            <label for="middleInit" class="sr-only">Middle Init</label>
            <input type="text" id="middleInit" class="form-control" placeholder="middleInit" required autofocus>

            <label for="lastName" class="sr-only">lastName</label>
            <input type="text" id="lastName" class="form-control" placeholder="last name" required autofocus>

            <label for="DOB" class="sr-only">DOB</label>
            <input type="date" id="DOB" class="form-control"  placeholder="DOB" required autofocus>

            <label for="noDependents" class="sr-only">noDependents</label>
            <input type="number" id="noDependents" class="form-control" placeholder="noDependents" required autofocus>

            <label for="zipCode" class="sr-only">zipCode</label>
            <input type="text" id="zipCode" class="form-control" placeholder="zipCode" required autofocus>

            <label for="monthlyIncome" class="sr-only">monthlyIncome</label>
            <input type="number" id="monthlyIncome" class="form-control" placeholder="monthlyIncome" required autofocus>

            <label for="desiredRetirementAge" class="sr-only">desiredRetirementAge</label>
            <input type="number" id="desiredRetirementAge" class="form-control" placeholder="desiredRetirementAge" required autofocus>

            <label for="stocks" class="sr-only">stocks</label>
            <input type="number" id="stocks" class="form-control" placeholder="how much money do you have in stocks?" required autofocus>

            <label for="bonds" class="sr-only">bonds</label>
            <input type="number" id="bonds" class="form-control" placeholder="How much money do you have in bonds?" required autofocus>

            <label for="cash" class="sr-only">cash</label>
            <input type="number" id="cash" class="form-control" placeholder="How much uninvested cash do you have?" required autofocus>

            <label for="retirementAccounts" class="sr-only">retirementAccounts</label>
            <input type="number" id="retirementAccounts" class="form-control" placeholder="How much money do you have in retirement accounts?" required autofocus>

            <label for="annuities" class="sr-only">annuities</label>
            <input type="number" id="annuities" class="form-control" placeholder="How much money do you have in annuites?" required autofocus>

            <label for="property" class="sr-only">property</label>
            <input type="number" id="property" class="form-control" placeholder="How much is all your property worth?" required autofocus>


            <label for="other" class="sr-only">other</label>
            <input type="number" id="other" class="form-control" placeholder="How much are all your other asssets worth?" required autofocus>

            <label for="savingsRateOfIncome" class="sr-only">savingsRateOfIncome</label>
            <input type="number" id="savingsRateOfIncome" class="form-control" placeholder="what percentage of your income do you save each month?" required autofocus>

            <label for="car" class="sr-only">car</label>
            <input type="car" id="car" class="form-control" placeholder="How much do you spend on transportation a month?" required autofocus>

            <label for="rentOrMortgage" class="sr-only">rentOrMortgage</label>
            <input type="number" id="rentOrMortgage" class="form-control" placeholder="How rent or mortgage do you pay a month?" required autofocus>

            <label for="groceries" class="sr-only">groceries</label>
            <input type="number" id="groceries" class="form-control" placeholder="How much do you spend on groceries/food a month?" required autofocus>

            <label for="bills" class="sr-only">bills</label>
            <input type="number" id="bills" class="form-control" placeholder="How much do you spend on bills a month" required autofocus>

            <label for="otherExpenses" class="sr-only">otherExpenses</label>
            <input type="number" id="otherExpenses" class="form-control" placeholder="How much are your other montly expenses?" required autofocus>

            <label for="mortgage" class="sr-only">mortgage</label>
            <input type="number" id="mortgage" class="form-control" placeholder="How much do have left on your mortgage?" required autofocus>

            <label for="homeEquityLoans" class="sr-only">homeEquityLoans</label>
            <input type="number" id="homeEquityLoans" class="form-control" placeholder="What is the amount of your home equity loans?" required autofocus>

            <label for="studentLoans" class="sr-only">studentLoans</label>
            <input type="number" id="studentLoans" class="form-control" placeholder="What is the amount of your student loans?" required autofocus>

            <label for="creditCardDebt" class="sr-only">creditCardDebt</label>
            <input type="number" id="creditCardDebt" class="form-control" placeholder="How much credit card debt do you have ?" required autofocus>

            <label for="otherDebt" class="sr-only">otherDebt</label>
            <input type="number" id="otherDebt" class="form-control" placeholder="What is the total amount of all your other debt?" required autofocus>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me" id="signup-remember-checkbox">Remember me
                </label>
            </div>
            <button class="btn btn-signup btn-primary" type="submit" id="signup-button">Sign Up</button>
            <div class = "back-to-login">
                <a id="back-to-login-link" href="">Back to Login</a>
            </div>
        </form>
    </div>
</div>
</section>

<!--error modal-->
<div class="modal fade" id="errorModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body">
          <p>Sorry, we don't recognize those login credentials.</p>
          <button type="button" class="btn btn-default" data-dismiss="modal">Try Again</button>
        </div>
      </div>
    </div>
  </div>
